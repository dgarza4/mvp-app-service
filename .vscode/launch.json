  "version": "0.2.0",
  "configurations": [{
    "name": "Attach to NodeJS debugger",
    "type": "node",
    "request": "attach",
    "protocol": "auto",
    "restart": true,
    "localRoot": "${workspaceFolder}/src",
    "remoteRoot": "/app/src",
    "outFiles": [
      "${workspaceFolder}/dist/**/*.js"
    ],
    "skipFiles": [
      "<node_internals>/**/*.js",
    ],
    // "sourceMaps": true,
    "port": 5858
  }]
}
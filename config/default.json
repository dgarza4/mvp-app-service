{
  "name": "platform-api-standalone-service-example",
  "instance": "1",
  "user_id": null,
  "group_id": null,

  // SERVICES
  "core": {
    "services": {
      "folder": ""
    },

    "swagger": {
      "enabled": true,
      "apiRoute": "/api-docs"
    },

    "rest-manager": {
      "port": 3080,
      "address": "",
      "cors": "*",
      "shutdownTimeoutSeconds": 5,
      "timeout": 600000,
      "maxBodySize": 200,
      "maxParameters": 100000,
      "apiRoute": "/api"
    },

    "notifications-manager": {
      "adapters": {
        "email": {
          "enabled": false,
          "transport": "smtp",
          "transportConfig": {
            "host": "",
            "port": 0,
            "auth": {
              "user": "",
              "pass": ""
            }
          }
        },
        "slack": {
          "enabled": false,
          "webhookURL": "",
          "defaultChannel": "",
          "icon": "",
          "username": ""
        }
      },
      "paths": {
        "templates": "./notifications/default/templates",
        "messages": "./notifications/default/messages",
        "targets": "./notifications/default/targets"
      }
    },

    "auth-manager": {
      "defaultClient": "frontend",
      "keycloakClients": {
        "backend": {
          "realm": "endeavor-keycloak",
          "auth-server-url": "http://localhost:30080/auth/",
          "ssl-required": "external",
          "resource": "endeavor-keycloak-speakers-backend",
          "verify-token-audience": true,
          "credentials": {
            "secret": "secret"
          },
          "use-resource-role-mappings": true,
          "confidential-port": 0,
          "policy-enforcer": {}
        },
        "frontend": {
          "realm": "endeavor-keycloak",
          "auth-server-url": "http://localhost:30080/auth/",
          "ssl-required": "external",
          "resource": "endeavor-keycloak-speakers-frontend",
          "public-client": true,
          "verify-token-audience": true,
          "use-resource-role-mappings": true,
          "confidential-port": 0
        }
      }
    },

    "repl": {
      "enabled": true,
      "name": "endeavor-platform-api-${replId}",
      "path": "/tmp/endeavor-platform-api-${replId}.sock"
    },

    "logger": {
      "enabled": true,
      "level": "debug",
      "defaultLevel": "info",
      "handlers": [{
          "type": "console",
          "id": "console",
          "enabled": true,
          "level": "debug",
          "timestamp": true,
          "colorize": true,
          "formatter": "txt"
        },
        {
          "type": "file",
          "id": "file-info",
          "enabled": false,
          "file": "./tmp/logs/messages-${env}.log",
          "level": "debug",
          "timestamp": true,
          "formatter": "json"
        },
        {
          "type": "file",
          "id": "file-error",
          "enabled": false,
          "file": "./tmp/logs/errors-${env}.log",
          "level": "error",
          "timestamp": true,
          "formatter": "json"
        }
      ]
    }
  },

  // SERVICES

  "services": {
    "talent": {
      "enabled": false
    }
  }
}
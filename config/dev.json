{
  // CORE
  "core": {
    "rest-manager": {
      "port": 3080,
      "address": "",
      "cors": "*"
    },
    "auth-manager": {
      "keycloakClients": {
        "backend": {
          "realm": "endeavor-keycloak",
          "auth-server-url": "http://localhost:30080/auth/",
          "resource": "endeavor-keycloak-speakers-backend",
          "credentials": {
            "secret": "secret"
          }
        },
        "frontend": {
          "realm": "endeavor-keycloak",
          "auth-server-url": "http://localhost:30080/auth/",
          "resource": "endeavor-keycloak-speakers-frontend",
          "public-client": true
        }
      }
    }
  },

  // SERVICES
  "services": {
    "talent": {
      "enabled": true,
      "database": {
        "client": "mysql",
        "host": "localhost",
        "port": 33306,
        "user": "talent",
        "password": "talent",
        "database": "talent",
        "logging": false,
        "synchronize": false
      }
    }
  }
}
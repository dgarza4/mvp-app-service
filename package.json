{
  "name": "mvp-app-service",
  "version": "2.1.0",
  "description": "Endeavor MVP-app service",
  "main": "index.js",
  "private": true,
  "author": "Alessandro Iob <alessandro.iob@toptal.com>",
  "dependencies": {
    "class-validator": "^0.12.2",
    "express": "^4.17.1",
    "http-errors": "^1.7.3",
    "http-status-codes": "^1.4.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "platform-api": "2.0.8",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/http-errors": "^1.6.3",
    "@types/lodash": "^4.14.150",
    "@types/moment": "^2.13.0",
    "@types/node": "^13.13.4",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "dotenv-cli": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "jest": "^25.5.2",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "ts-node-dev": "^1.0.0-pre.56",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "start-dev": "TS_NODE_TYPE_CHECK=true NODE_ENV=${NODE_ENV:-dev} npx ts-node-dev --respawn --transpile-only src/index.ts",
    "start-dev:debug": "TS_NODE_TYPE_CHECK=true NODE_ENV=${NODE_ENV:-dev} npx ts-node-dev --respawn --inspect=0.0.0.0:9229 --transpile-only src/index.ts",
    "start-dev-k8s": "TS_NODE_TYPE_CHECK=true npx ts-node-dev --poll --respawn --transpile-only src/index.ts",
    "tp:start-dev": "telepresence --namespace ${K8S_NAMESPACE:-mvp-app-develop} --expose 3080 --swap-deployment ${K8S_DEPLOYMENT:-mvp-app-service} --docker-run --rm -it -p ${TP_PORT:-3080}:3080 --entrypoint='' -v $(pwd)/src:/app/src -v $(pwd)/config:/app/config mvp-app-service:latest yarn start-dev",
    "tp:start-dev:debug": "telepresence --namespace ${K8S_NAMESPACE:-mvp-app-develop} --expose 3080 --swap-deployment ${K8S_DEPLOYMENT:-mvp-app-service} --docker-run --rm -it -p ${TP_PORT:-3080}:3080 -p ${DEBUG_PORT:-9229}:9229 --entrypoint='' -v $(pwd)/src:/app/src -v $(pwd)/config:/app/config mvp-app-service:latest yarn start-dev:debug",
    "k8s:scale-down": "kubectl -n ${K8S_NAMESPACE:-mvp-app-develop} scale --replicas=1 deployment mvp-app-service",
    "k8s:flux-disable": "kubectl -n ${K8S_NAMESPACE:-mvp-app-develop} annotate deployment ${K8S_DEPLOYMENT:-mvp-app-service} 'fluxcd.io/ignore=true'",
    "k8s:flux-enable": "kubectl -n ${K8S_NAMESPACE:-mvp-app-develop} annotate deployment ${K8S_DEPLOYMENT:-mvp-app-service} 'fluxcd.io/ignore-'",
    "docker:build-dev": "docker build -t mvp-app-service -f Dockerfile.dev .",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "lint": "eslint --ext .js,.ts src/",
    "lint-fix": "eslint --fix --ext .js,.ts src/",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "jest --testTimeout=10000",
    "test-watch": "jest --watch",
    "test-coverage": "jest --coverage",
    "view-coverage": "open coverage/index.html"
  }
}